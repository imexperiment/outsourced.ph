<div class="registration-container">
    <form class="row">
        <div class="col-xs-12 col-sm-4">
            <br />
            // TODO: Product Information
        </div>
        <div class="col-xs-12 col-sm-8">
            <div class="form-group col-xs-12">
                <h3>Online Registration</h3>
            </div>

            <div class="form-group col-xs-12">
                <label for="title">Title</label>
                <div class="alert alert-danger"></div>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" />
            </div>

            <div class="form-group col-xs-12 col-sm-7">
                <label for="first">First name</label>
                <div class="alert alert-danger"></div>
                <input type="text" class="form-control" name="first" id="first" placeholder="Enter first name" />
            </div>

            <div class="form-group col-xs-12 col-sm-5">
                <label for="surname">Surname</label>
                <div class="alert alert-danger"></div>
                <input type="text" class="form-control" name="surname" id="surname" placeholder="Enter surname" />
            </div>

            <div class="form-group col-xs-12">
                <label for="birthdate">Date of birth</label>
                <div class="alert alert-danger"></div>
                <input type="date" class="form-control" name="birthdate" id="birthdate" />
            </div>

            <div class="form-group col-xs-12">
                <label for="street">Street</label>
                <div class="alert alert-danger"></div>
                <input type="text" class="form-control" name="street" id="street" placeholder="Enter street" />
            </div>

            <div class="form-group col-xs-12 col-sm-8">
                <label for="town">Town</label>
                <div class="alert alert-danger"></div>
                <input type="text" class="form-control" name="town" id="town" placeholder="Enter town" />
            </div>

            <div class="form-group col-xs-12 col-sm-4">
                <label for="postcode">Postcode</label>
                <div class="alert alert-danger"></div>
                <input type="number" class="form-control" name="postcode" id="postcode" placeholder="Enter postcode" />
            </div>

            <div class="form-group checkbox col-xs-12">
                <div class="alert alert-danger"></div>
                <input type="checkbox" name="tc" id="tc">
                <label for="tc">Declaration that applicant is 18+ years of age.</label>
            </div>

            <div class="col-xs-12">
                <a data-action="submit" class="btn btn-success pull-right">Register</a>
            </div>
        </div>
    </form>
</div>